<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link rel="stylesheet" type="text/css" href="css/cadastro-atleta.css">
    <title>Cadastro | Atleta</title>
</head>

<%- include('../templates/head.ejs') %>

<body>
    <%- include('../templates/header.ejs') %>

        <main>
            <div class="container">
                <img src="assets/atleta-circulo.png" id="i-atleta">
                <h2 id="t-atleta">Atleta</h2>
            </div>

            <div class="btn">
                <a href="cadastro-clube"><button id="btn-clube">Clube</button></a>
                <a href="cadastro-atleta"><button id="btn-atleta">Atleta</button></a>
            </div>
            <span class="obrigatorio">
                <p id="asteristico">*</p>Campo obrigatório
            </span>
            <form class="formulario" method="post" action="cadastro-atleta">
                <span class="campos-form">
                    <label class="titulo-nome">Nome<p class="asteristico">*</p></label>
                    <div class="nome">
                        <input type="text" placeholder="Insira seu nome" class="campo-nome" name="nome">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-esporte">Esporte<p class="asteristico">*</p></label>
                    <div class="esporte">
                        <input type="text" placeholder="Insira seu esporte" class="campo-esporte" name="esporte">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-categoria">Categoria<p class="asteristico">*</p></label>
                    <div class="categoria">
                        <input type="text" placeholder="Insira sua categoria" class="campo-categoria" name="categoria">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-cnpj">CNPJ do Clube</label>
                    <div class="cnpj">
                        <input type="number" placeholder="Insira o CNPJ do Clube" class="campo-modalidade" name="cnpj_clube">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-cidade">Cidade<p class="asteristico">*</p></label>
                    <div class="cidade">
                        <input type="text" placeholder="Insira sua cidade" class="campo-cidade" name="cidade">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-estado">Estado<p class="asteristico">*</p></label>
                    <div class="estado">
                        <input type="text" placeholder="Insira seu estado" class="campo-estado" name="estado">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-email">E-mail<p class="asteristico">*</p></label>
                    <div class="email">
                        <input type="email" placeholder="Insira seu e-mail" class="campo-email" name="email">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <!-- <label class="titulo-celular">Celular</label>
                    <div class="celular">
                        <input type="tel" placeholder="Insira seu celular" class="campo-celular" name="celular">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div> -->

                    <label class="titulo-senha">Senha<p class="asteristico">*</p></label>
                    <div class="senha">
                        <input type="password" placeholder="Crie sua senha" class="campo-senha" name="senha">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>

                    <label class="titulo-repita">Repita a senha<p class="asteristico">*</p></label>
                    <div class="repita">
                        <input type="password" placeholder="Insira sua senha" class="campo-repita">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div>
                </span>

                <div class="cadastro">
                    <input type="submit" value="CADASTRAR" id="cadastrar">
                </div>
            </form>
            <span id="cadastrado">Já possui cadastro? <a href="login-atleta">Entre aqui</a></span>
        </main>

        <%- include('../templates/rodape.ejs') %>
</body>

</html>