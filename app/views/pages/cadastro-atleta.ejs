<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link rel="stylesheet" type="text/css" href="css/cadastro-atleta.css">
    <title>Cadastro | Atleta</title>
</head>

<%- include('../templates/head.ejs') %>

<body>
    <%- include('../templates/header.ejs') %>

        <main>
            <div class="container">
                <img src="assets/cadastro-login/atleta-circulo.png" id="i-atleta">
                <h2 id="t-atleta">Atleta</h2>
            </div>

            <div class="btn">
                <a href="cadastro-clube"><button id="btn-clube">Clube</button></a>
                <a href="cadastro-atleta"><button id="btn-atleta">Atleta</button></a>
            </div>
            <span class="obrigatorio">
                <p class="asteristico">*</p>Campo obrigatório
            </span>
            <form class="formulario" method="post" action="cadastro-atleta">
                <span class="campos-form">
                    <label class="titulo">Nome<p class="asteristico">*</p></label>
                    <div class="nome">
                        <input type="text" placeholder="Insira seu nome" class="campo" name="nome">
                    
                    </div>

                    <label class="titulo">Esporte<p class="asteristico">*</p></label>
                    <div class="esporte">
                        <select name="esporte" id="esporte">
                            <option selected disabled>Insira seu esporte</option>
                            <% data.esportes.forEach(esporte => { %>
                                    <option value="<%- esporte.id %>"><%- esporte.nome %></option>
                            <% }) %>
                            <option value="outro" id="outro">outro</option>
                        </select>
                        
                    </div>

                    <label class="titulo">Categoria<p class="asteristico">*</p></label>
                    <div class="categoria">
                        <input type="text" placeholder="Insira sua categoria" class="campo" name="categoria">
                        
                    </div>

                    <label class="titulo">CNPJ do Clube</label>
                    <div class="cnpj">
                        <input type="number" placeholder="Insira o CNPJ do Clube" class="campo" name="cnpj_clube">
                        
                    </div>

                    <label class="titulo">Cidade<p class="asteristico">*</p></label>
                    <div class="cidade">
                        <input type="text" placeholder="Insira sua cidade" class="campo" name="cidade">
                      
                    </div>

                    <label class="titulo">Estado<p class="asteristico">*</p></label>
                    <div class="estado">
                        <input type="text" placeholder="Insira seu estado" class="campo" name="estado">
                        
                    </div>

                    <label class="titulo">E-mail<p class="asteristico">*</p></label>
                    <div class="email">
                        <input type="email" placeholder="Insira seu e-mail" class="campo" name="email">
                        
                    </div>

                    <!-- <label class="titulo-celular">Celular</label>
                    <div class="celular">
                        <input type="tel" placeholder="Insira seu celular" class="campo-celular" name="celular">
                        <span class="bottom"></span>
                        <span class="right"></span>
                        <span class="top"></span>
                        <span class="left"></span>
                    </div> -->

                    <label class="titulo">Senha<p class="asteristico">*</p></label>
                    <div class="senha">
                        <input type="password" placeholder="Crie sua senha" class="campo" name="senha">
                        
                    </div>

                    <label class="titulo">Repita a senha<p class="asteristico">*</p></label>
                    <div class="repita">
                        <input type="password" placeholder="Insira sua senha" class="campo">
                        
                    </div>
                </span>

                <div class="cadastro">
                    <input type="submit" value="CADASTRAR" id="cadastrar">
                </div>
            </form>
            <span id="cadastrado">Já possui cadastro? <a href="login-atleta">Entre aqui</a></span>
        </main>

        <%- include('../templates/rodape.ejs') %>
</body>

</html>