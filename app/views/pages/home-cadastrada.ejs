<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link rel="stylesheet" type="text/css" href="css/home-cadastrada.css">
    <title>InveSport</title>
</head>

<%- include('../templates/head.ejs') %>

<body>
    <%- include('../templates/header.ejs') %>

        <main>
            <input type="search" placeholder="Pesquise aqui" class="pesquisa">

            <div class="veja">
                <span id="text-veja">Veja</span>
                <div class="icon-veja">
                    <div id="veja-atleta">
                        <a href=""><img src="imgs/icones/atleta-circulo.png" class="filtro-atleta"></a>
                        <span id="text-atltetas">Atletas</span>
                    </div>
                    <div id="veja-clubes">
                        <a href=""><img src="imgs/icones/time-circulo.png" class="filtro-clube"></a>
                        <span>Clubes</span>
                    </div>
                    <div id="veja-esportes">
                        <a href=""><img src="imgs/icones/esportes-circulo.png" class="filtro-esporte"></a>
                        <span>Esportes</span>
                    </div>
                </div>
            </div>

            <div class="times">
                <div class="titulo-times">
                    <h6>Times e organizações esportivas</h6>
                    <a><i class='bx bx-chevron-right' id="seta-left"></i></a>
                </div>
                <div class="box-clube1">
                    <img src="./imgs/times/oeste barueri.jfif" class="oeste">
                    <div class="text-clube1">
                        <h4 id="text-oeste">Oeste Barueri</h4>
                        <h4 id="cidade-barueri">Barueri - SP</h4>
                        <div class="linha-sports1">
                            <img src="./imgs/icones/bola-futebol-48px.png" id="i-bolafut1">
                        </div>
                    </div>
                </div>
                <div class="box-clube2">
                    <img src="./imgs/times/osasco voleibol .jfif" class="osasco">
                    <div class="text-clube2">
                        <h4 id="text-osasco">Osasco</h4>
                        <h4 id="cidade-osasco">Osasco - SP</h4>
                        <div class="linha-sports2">
                            <img src="./imgs/icones/bola-de-volei-48px.png" id="i-bolavolei2">
                        </div>
                    </div>

                </div>
                <div class="box-clube3">
                    <img src="./imgs/times/pinheiros.jfif" class="pinheiros">
                    <div class="text-clube3">
                        <h4 id="text-pinheiros">Pinheiros</h4>
                        <h4 id="cidade-pinheiros">Pinheiros - SP</h4>
                        <div class="linha-sports3">
                            <img src="./imgs/icones/bola-de-volei-48px.png" id="i-bolavolei3">
                            <img src="./imgs/icones/bola-futebol-48px.png" id="i-bolafut3">
                            <img src="./imgs/icones/bola-basquete-48px.png" id="i-bolabasq3">
                            <img src="./imgs/icones/bola-rugbi-48px.png" id="i-bolarugbi3">
                            <img src="./imgs/icones/mais.png" id="i-mais3">
                        </div>
                    </div>
                </div>
            </div>

            <div class="atletas">
                <div class="titulo-atletas">
                    <h6>Atletas</h6>
                    <a><i class='bx bx-chevron-right' id="seta-left"></i></a>
                </div>
                <div class="box-atleta1">
                    <img src="./imgs/38919-atleta-profissiona.jpg" class="joao">
                    <div class="text-atleta1">
                        <h4 id="text-joao">João Victor</h4>
                        <h4 id="cidade-barueri">Barueri - SP</h4>
                        <div class="linha1">
                            <img src="./imgs/icones/atletismo-48px.png" id="i-atletismo">
                            <h4>SUB-21</h4>
                        </div>
                    </div>
                </div>
                <div class="box-atleta2">
                    <img src="./imgs/times/osasco voleibol .jfif" class="victor">
                    <div class="text-atleta2">
                        <h4 id="text-victor">Victor da Graça</h4>
                        <h4 id="cidade-osasco">Osasco - SP</h4>
                        <div class="linha2">
                            <img src="./imgs/icones/bola-de-volei-48px.png" id="i-bolavolei2">
                            <h4>SUB-20</h4>
                        </div>
                    </div>

                </div>
                <div class="box-atleta3">
                    <img src="./imgs/juliana.jpg" class="juliana">
                    <div class="text-atleta3">
                        <h4 id="text-juliana">Juliana Barbosa</h4>
                        <h4 id="cidade-pinheiros">Pinheiros - SP</h4>
                        <div class="linha3">
                            <img src="./imgs/icones/bola-futebol-48px.png" id="i-bolafut3">
                            <h4>SUB-17</h4>
                        </div>
                    </div>
                </div>
            </div>

            <aside id="publicidade">
                <img src="./imgs/anuncio.jfif">
            </aside>

            <div class="box-plano">
                <img src="./imgs/icones/plano-256px.png" id="i-plano">
                <h3 id="ass-destaque">Assinatura Destaque</h3>
                <ul id="topicos">
                    <li>Selo destaque</li>
                    <li>Maior visibilidade</li>
                    <li>Publicações com até 10 fotos</li>
                </ul>
                <span id="preco-plano">R$9,90<h6 id="mes">/mês</h6></span>
                <button href="" id="btn-assinar">ASSINAR</button>
            </div>
        </main>

        <%- include('../templates/rodape.ejs') %>
</body>

</html>