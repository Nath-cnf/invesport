generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id                 String  @id @default(uuid())
    banner_perfil      Bytes?
    banner_image_type  String?
    imagem_perfil      Bytes?
    imagem_perfil_type String?
    nome               String
    id_esporte         String
    cnpj_clube         String?
    cidade             String
    estado             String
    email              String  @unique
    senha              String
    chave_pix          String?
    customer_id        String? @unique
    premium            Int     @default(0) @db.TinyInt

    tokens  Token[]
    esporte Esporte         @relation(fields: [id_esporte], references: [id], onDelete: Cascade, onUpdate: Cascade)
    tarefas TarefaUsuario[]
}

model Clube {
    id                 String  @id @default(uuid())
    banner_perfil      Bytes?
    banner_image_type  String?
    imagem_perfil      Bytes?
    imagem_perfil_type String?
    nome               String
    cnpj_clube         String
    cidade             String
    estado             String
    email              String  @unique
    senha              String
    customer_id        String? @unique

    esportes Esporte[]
    tarefas  TarefaClube[]
}

model Admin {
    id    String @id @default(uuid())
    nome  String
    email String @unique
    senha String
}

model Esporte {
    id       String    @id @default(uuid())
    nome     String    @unique
    usuarios Usuario[]
    clubes   Clube[]
}

model Token {
    id         String   @id @default(uuid())
    email      String
    created_at DateTime @default(now())

    usuario Usuario @relation(fields: [email], references: [email], onDelete: Cascade, onUpdate: Cascade)
}

model TarefaUsuario {
    id             String   @id @default(uuid())
    owner_id       String
    nome           String
    data_conclusao DateTime
    created_at     DateTime @default(now())
    updated_at     DateTime @updatedAt

    usuario Usuario @relation(fields: [owner_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model TarefaClube {
    id             String   @id @default(uuid())
    owner_id       String
    nome           String
    data_conclusao DateTime
    created_at     DateTime @default(now())
    updated_at     DateTime @updatedAt

    clube Clube @relation(fields: [owner_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model BeneficiosAssinatura {
    id String @id @default(uuid())
    beneficios String @db.LongText
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}