generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id         String    @id @default(uuid())
    nome       String
    esporte    String
    categoria  String
    cnpj_clube String
    cidade     String
    estado     String
    email      String @unique
    senha      String
}

model Esporte {
    futebol           String @unique
    volei             String
    basquete          String
    tenis             String
    futebol_americano String
    rugbi             String
}