generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id         String  @id @default(uuid())
    nome       String
    id_esporte String
    cnpj_clube String?
    cidade     String
    estado     String
    email      String  @unique
    senha      String
    chave_pix  String?

    tokens  Token[]
    esporte Esporte @relation(fields: [id_esporte], references: [id])
}

model Clube {
    id         String @id @default(uuid())
    nome       String
    cnpj_clube String
    cidade     String
    estado     String
    email      String @unique
    senha      String

    esportes Esporte[]
}

model Esporte {
    id       String    @id @default(uuid())
    nome     String    @unique
    usuarios Usuario[]
    clubes   Clube[]
}

model Token {
    id         String   @id @default(uuid())
    email      String
    created_at DateTime @default(now())

    usuario Usuario @relation(fields: [email], references: [email])
}
