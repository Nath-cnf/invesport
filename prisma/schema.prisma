generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id         String @id @default(uuid())
    nome       String
    id_esporte String
    categoria  String
    cnpj_clube String
    cidade     String
    estado     String
    email      String @unique
    senha      String

    esporte Esporte @relation(fields: [id_esporte], references: [id])
}

model Esporte {
    id       String    @id @default(uuid())
    nome     String    @unique
    usuarios Usuario[]
}
